{
    "version": 2,
    "name": "laravel-lms",
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_KEY": "base64:q3qivUztDRMdOb+n23+NT8OXvUjY9B9Dl12ljVz3qvY=",
      "APP_DEBUG": "false",
      "APP_URL": "https://laravel-lms.vercel.app",
      "DB_CONNECTION": "mysql",
      "DB_HOST": "your-db-host",
      "DB_PORT": "3306",
      "DB_DATABASE": "your-database-name",
      "DB_USERNAME": "your-database-username",
      "DB_PASSWORD": "your-database-password",
      "CACHE_DRIVER": "file",
      "SESSION_DRIVER": "file",
      "QUEUE_DRIVER": "sync"
    },
    "functions": {
      "api/index.php": {
        "runtime": "@vercel/php"
      }
    }
  }
  